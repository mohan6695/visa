---
interface Props {
  slotId: string;
  position: 'left' | 'right';
}

const { slotId, position = 'right' } = Astro.props;
---

<div class={`ad-sidebar ad-sidebar-${position} fixed top-20 ${position}-4 w-[160px] h-[600px] hidden lg:block z-40`}>
  <ins
    class="adsbygoogle"
    style="display: inline-block; width: 160px; height: 600px"
    data-ad-client="ca-pub-YOUR_PUBLISHER_ID"
    data-ad-slot={slotId}
    data-ad-format="vertical"
    data-full-width-responsive="true"
  ></ins>
</div>

<script is:inline>
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>
