# Application Configuration
APP_NAME=Visa Community Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/visa_community
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API Configuration
API_V1_STR=/api/v1

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# Redis Configuration
# Option 1: Direct URL (for local development)
REDIS_URL=redis://localhost:6379

# Option 2: Individual components (for managed Redis services)
# REDIS_HOST=your-redis-host.upstash.io
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0
# REDIS_SSL=true
REDIS_API_KEY=your-redis-api-key

# AI Provider Configuration
AI_PROVIDER=groq  # Options: groq, openrouter

# Groq Configuration
GROQ_API_KEY=your-groq-api-key

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Cloudflare R2 Storage
R2_BUCKET_NAME=visa-platform-storage
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_S3_ENDPOINT=https://3ae98b91b615a3cf17f8acb402881aae.r2.cloudflarestorage.com/visa-platform-storage

# PostHog Configuration (Hybrid Setup)
# Option 1: SaaS PostHog
# POSTHOG_API_KEY=your-posthog-api-key
# POSTHOG_HOST=https://app.posthog.com

# Option 2: Self-hosted PostHog (Free on Render)
POSTHOG_API_KEY=your-self-hosted-posthog-api-key
POSTHOG_HOST=https://your-posthog-instance.render.com

# Hybrid Analytics Configuration
ENABLE_HYBRID_ANALYTICS=true
STORE_EVENTS_LOCALLY=true

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Search Configuration
SEARCH_RESULTS_LIMIT=100
SEARCH_SUGGESTIONS_LIMIT=10

# Chat Configuration
CHAT_MESSAGE_LIMIT=1000
CHAT_HISTORY_LIMIT=50

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring Configuration
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Development Configuration
HOT_RELOAD=true
LOG_LEVEL=INFO